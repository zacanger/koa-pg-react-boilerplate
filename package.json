{
  "name": "koa-pg-react-boilerplate",
  "description": "Example",
  "version": "1.0.0",
  "private": true,
  "author": "Zac Anger <zac@zacanger.com> (https://zacanger.com)",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "preversion": "npm t && npm run build",
    "start": "./scripts/start.sh",
    "test": "run-s -s test:ts test:lint test:node",
    "test:build": "run-s lint test:ts test:server test:client",
    "test:server": "node --test -r ts-node/register src/**/*.test.ts",
    "test:client": "echo todo",
    "test:ts": "tsc --noEmit",
    "dev": "nodemon --watch src/server --exec tsx src/server/index.ts",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "lint": "sortpack && eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "build:client": "vite build --outDir lib/client",
    "build:server": "tsc -p tsconfig.server.json && vite build --ssr src/client/entry-server.tsx --outDir lib/entry",
    "clean": "rimraf lib",
    "serve": "NODE_ENV=production node ./lib/server"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zacanger/koa-pg-react-boilerplate.git"
  },
  "keywords": [
    "docker",
    "jenkins",
    "microservice",
    "typescript"
  ],
  "dependencies": {
    "@koa/router": "12.0.1",
    "@loadable/component": "5.16.3",
    "boring-cluster": "6.1.5",
    "dnscache": "1.0.2",
    "koa": "2.15.3",
    "koa-bodyparser": "4.4.1",
    "koa-compress": "5.1.1",
    "koa-connect": "2.1.0",
    "koa-cookie": "1.0.0",
    "koa-helmet": "7.0.2",
    "koa-logger": "3.2.1",
    "koa-lowercase": "2.1.4",
    "koa-simple-static": "4.1.2",
    "koa2-winston": "3.2.0",
    "kysely": "0.27.3",
    "pg": "8.11.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-helmet-async": "2.0.4",
    "react-router-dom": "6.22.3",
    "styled-components": "6.1.8",
    "styled-reset": "4.5.2",
    "winston": "3.13.0"
  },
  "devDependencies": {
    "@types/compression": "1.7.5",
    "@types/koa": "2.15.0",
    "@types/koa__router": "12.0.4",
    "@types/koa-bodyparser": "4.3.12",
    "@types/koa-compress": "4.0.6",
    "@types/koa-cookie": "1.0.3",
    "@types/koa-logger": "3.1.5",
    "@types/loadable__component": "5.13.9",
    "@types/node": "20.12.7",
    "@types/pg": "8.11.5",
    "@types/react": "18.2.77",
    "@types/react-dom": "18.2.25",
    "@types/react-router-dom": "5.3.3",
    "@types/serve-static": "1.15.7",
    "@types/supertest": "6.0.2",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "7.5.0",
    "@typescript-eslint/parser": "7.5.0",
    "@vitejs/plugin-react": "4.2.1",
    "compression": "1.7.4",
    "eslint": "8.57.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.4.6",
    "nodemon": "3.1.0",
    "npm-run-all": "4.1.5",
    "rimraf": "5.0.5",
    "serve-static": "1.15.0",
    "sortpack": "2.4.0",
    "supertest": "6.3.4",
